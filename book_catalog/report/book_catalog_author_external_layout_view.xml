<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_authors">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <t t-foreach="o.author_ids" t-as="author">
                            <div class="page">
                                <header>
                                    <h2 class="text-center">List of books by <span t-esc="author.name"/></h2>
                                </header>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Publication date</th>
                                            <th>Stock</th>
                                            <th>Status</th>
                                            <th>Collection</th>
                                            <th>Collection name</th>
                                        </tr> 
                                    </thead>
                                    <thbody>
                                        <tr t-foreach="author.book_id" t-as="book">
                                            <td>
                                                <span t-field="book.title"/>
                                            </td>
                                            <td>
                                                <span t-field="book.publication_date"/>
                                            </td>
                                            <td>
                                                <span t-field="book.stock"/>
                                            </td>
                                            <td>
                                                <span t-field="book.status"/>
                                            </td>
                                            <td>
                                                <span t-field="book.collection"/>
                                            </td>
                                            <td>
                                                <span t-field="book.collection_name"/>
                                            </td>
                                        </tr> 
                                    </thbody>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
