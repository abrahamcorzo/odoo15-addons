<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_author">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="text-center">List of books by author <span t-esc="o.name"/></h2>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Publication date</th>
                                        <th>Stock</th>
                                        <th>Status</th>
                                        <th>Collection</th>
                                        <th>Collection name</th>
                                    </tr> 
                                </thead>
                                <thbody>
                                    <tr t-foreach="o.book_id" t-as="book">
                                        <td>
                                            <span t-field="book.title"/>
                                        </td>
                                        <td>
                                            <span t-field="book.publication_date"/>
                                        </td>
                                        <td>
                                            <span t-field="book.stock"/>
                                        </td>
                                        <td>
                                            <span t-field="book.status"/>
                                        </td>
                                        <td>
                                            <span t-field="book.collection"/>
                                        </td>
                                        <td>
                                            <span t-field="book.collection_name"/>
                                        </td>
                                    </tr> 
                                </thbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
